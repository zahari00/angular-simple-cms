h1, h3
    font-weight 100

h3
    padding-bottom 0.5rem

.col
    padding 1rem
    border-radius 0.3rem
    border 1px solid #ccc
    min-width 20rem
    margin-right 1rem
    

.total
    position relative
    display inline-block

.grid
    margin-top 2rem
    display flex

.badge
    font-size 12px
    font-weight 500
    border-radius 50%
    line-height 1.5rem
    width 1.5rem
    text-align center
    position absolute
    top -1px
    right -28px
    color white
    background-color #4e73df

.btns-con 
    display flex
    padding-top 2rem

.btn
    margin-right 1rem
