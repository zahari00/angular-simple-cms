.navigation 
    min-height 100vh
    background-color: #4e73df;
    background-image: linear-gradient(180deg,#4e73df 10%,#224abe 100%);
    background-size: cover;

a
    text-decoration none
    color #fff

.router-link
    display block
    font-size .85rem
    padding 1rem
    opacity 0.8
    transition opacity 0.15s ease
    
    span
        position relative
        &:after
            content ''
            display block
            position absolute
            bottom -3px
            left 4px
            width 0
            height 1px
            background-color #fff
            transition width 0.15s ease 

    &.active, &:hover
        opacity 1
        font-weight 500

        span:after
            width 100%

.info-text
    font-weight bold
    display block
    padding: 0 1rem;
    font-weight: 800;
    font-size: .65rem;
    color #fff
    opacity 0.4

.divider
    margin 1rem 1rem 2rem
    height 1px
    background #fff
    opacity 0.2
    display block
    &.mt-0 
        margin-top -1px

.backend-title 
    color #ffffff
    padding 1rem

fa-icon 
    margin-right 0.75rem