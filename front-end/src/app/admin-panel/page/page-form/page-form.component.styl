.blocks-picker
    width 600px
    display flex
    .left, .right
        width 50%
    .blocks-con
        min-height 350px
        max-height 350px
        overflow auto
        padding 0.5rem
        border 1px solid #ccc
        border-radius 0.3rem
        // overflow-x hidden
        &::-webkit-scrollbar 
            width: 6px;

        /* Track */
        &::-webkit-scrollbar-track
            border-radius 0.3rem
            background: #ccc; 
        
        
        /* Handle */
        &::-webkit-scrollbar-thumb 
            border-radius 0.3rem
            background: #888; 
        

        /* Handle on hover */
        &::-webkit-scrollbar-thumb:hover 
            background: #555; 
        

    .left
        padding-right 0.5rem
        .drag
            cursor pointer
    .right
        padding-left 0.5rem

.remove
    margin-left auto
    cursor pointer

.drag
    padding 0.5rem 1rem
    background-color #fff
    border-radius 0.3rem
    border 1px solid #ccc
    margin-bottom  0.8rem
    cursor all-scroll

    svg 
        width 18px

.draggable-con
    display flex
    align-items center
    justify-content flex-start

.handler
    margin-right 0.75rem
    cursor all-scroll

.block-title
    margin-bottom 0.5rem
