.edit-media-con
    position relative

.overlay
    position absolute
    top 0
    left 0
    background-color rgba(255, 255, 255, 0.8)
    color rgba(78, 115, 223, 1)
    font-weight 500
    font-size 1.4rem
    display flex
    align-items center
    justify-content center
    width: 100%;
    height: 100%;
    z-index: 100;

.image-preview
    background-position center center
    background-size cover
    width 100%
    padding-bottom 56.25%
    text-align right

.small-field
    margin-top 1rem
    height 10px
    width 45%
    margin-left auto
    line-height: 10px
    font-size 12px
    text-align right
    display block

.field
    margin-top 1rem
    height 35px
    display block
    width 100%
    &.btn
        display inline-block
        width auto

.placeholder
    opacity 0.1
    background-color #4ebddf
    color #4ebddf