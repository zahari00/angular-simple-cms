.table
    width 100%
    text-align left

.body-item, .head-item
    padding 0.5rem

.btn
    margin-bottom 0.25rem
    margin-left 0.25rem

.body-item:last-child
    display flex

.table
    border-spacing 0


h5, h6
    font-size 1rem
    line-height 1.25rem

h5
    padding 1rem

h6
    font-weight normal
    padding 0.7rem 1rem

.table-flex, .tr
    display flex
    align-items center
    justify-content flex-start
    width 100%

    .content
        &:first-child
            min-width 5%
            max-width 5%

        &:nth-child(2)
            min-width 30%
            max-width 30%

        &:nth-child(3)
            min-width 30%
            max-width 30%

        &:nth-child(4)
            min-width 35%
            max-width 35%
            text-align right

            &.item-content
                display flex
                align-items center
                justify-content flex-end

.item
    cursor: pointer
    margin-bottom 4px
    &:hover
        background-color rgba(78, 115, 223, 0.07)

    &:last-of-type
        margin-bottom 0