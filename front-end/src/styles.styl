$error-color = red
$white = #fff

/* You can add global styles to this file, and also import other style files */
* 
    padding: 0;
    margin: 0;
    max-width 100%
    box-sizing border-box


body 
    font-family: Nunito, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
    color: #858796;
    text-align: left;
    background-color: #fff;

.rounded
    border-radius 0.3rem

.shadow 
    box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);


.btn:active, .btn:hover
    outline: 0;
    text-decoration none

.btn
    padding: 0.5rem 1rem;
    text-align: center;
    text-transform: uppercase;
    transition: 0.5s;
    background-size: 200% auto;
    color: white;
    border-radius: 0.4rem;
    display: inline-block;
    border 0
    cursor pointer
    transition all 0.15s ease
    text-decoration none
    font-size 0.8rem
    font-family inherit
    line-height 19px

    &:hover 
        background-position: right center;

.btn-primary 
    background-image: linear-gradient(to right, #4e73df 0%, #4e73df 51%, #224abe 100%)
    
.btn-action 
    background-image: linear-gradient(to right, #00CDAC 0%, #00CDAC 51%, #02AAB0 100%);

.btn-danger 
    background-image: linear-gradient(to right, #D31027 0%, #EA384D 51%, #D31027 100%)

.text-info
    color #17a2b8

.form-group
    margin-bottom: 1rem;

label 
    display: block;
    margin-bottom: .5rem;
    color #858796

.form 
    padding 2rem 0

.invalid
    label 
        color $error-color
    .form-control
        border-color $error-color

.error-response
    color $error-color
    margin-top 0.25rem

.form-control 
    display: block;
    width: 100%;
    padding: .375rem .75rem;
    font-size: 1rem;
    line-height: 1.5;
    color: #495057;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid #ced4da;
    border-radius: .25rem;
    transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
    overflow: visible;
    font-family: inherit;

    &:focus 
        color: #495057;
        background-color: #fff;
        border-color: #80bdff;
        outline: 0;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);

.text-white
    color $white

a
    color #224abe
    cursor pointer
    &.text-danger
        &:hover
            text-decoration underline 
.text-danger
    color red
    

// loader
.loading span 
    animation-name: blink;
    animation-duration: 1.4s;
    animation-iteration-count: infinite;
    animation-fill-mode: both;


.loading span:nth-child(2) 
    animation-delay: .2s;


.loading span:nth-child(3)
    animation-delay: .4s;

@keyframes blink 

    0% 
      opacity: .2;
    
    20% 
      opacity: 1;
    
    100% 
      opacity: .2;


.popover 
    position: absolute;
    top: 46px;
    left: 0px;
    z-index: 1060;
    display: block;
    max-width: 276px;
    line-height: 1.5;
    font-size: .875rem;
    word-wrap: break-word;
    background-color: #fff;
    border: 1px solid rgba(0,0,0,.2);
    border-radius: .3rem;

.popover-body 
    padding: .5rem .75rem;
    color: #212529;

.arrow 
    position: absolute;
    display: block;
    width: 10px;
    height: 10px;
    margin: 0 0.3rem;
    top: -6px;
    left: 32px;
    background: #fff;
    border-top: 1px solid rgba(0,0,0,.2);
    border-left: 1px solid rgba(0,0,0,.2);
    transform: rotate(45deg);

.between
    display flex
    align-items center
    justify-content flex-end

    a:first-child
        margin-right 1.75rem

.checkbox-con
    position: relative;
    display: block;
    min-height: 1.5rem;
    padding-left: 1.5rem;

.checkbox
    display none
    &:checked
        &+.checkbox-label
            &:after
                background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' width='8' height='8' viewBox='0 0 8 8'%3e%3cpath fill='%23fff' d='M6.564.75l-3.59 3.612-1.538-1.55L0 4.26l2.974 2.99L8 2.193z'/%3e%3c/svg%3e")
                border-color: #007bff;
                background-color: #007bff;
                
.checkbox-label
    position: relative;
    margin-bottom: 0;
    vertical-align: top;
    display flex
    align-items center
    justify-content flex-start

    &:after
        position: absolute;
        top: 2px;
        left: -1.5rem;
        max-width none
        display: block;
        width: 1rem;
        height: 1rem;
        pointer-events: none;
        content: "";
        background-color: #fff;
        border: #adb5bd solid 1px;
        border-radius: .25rem;
        color: #fff;
        background-position center center
        background-repeat no-repeat
    